<div id="files" class="tab-content">
  <h2>File Differences</h2>
  <p>
    The following tables show files with content differences. Check the detailed
    diff files in the output directory for more information.
  </p>

  <% details.fileComparisons.forEach(comparison => { if
  (comparison.contentDifferences.length === 0) return; %>
  <h3>Snapshot: <%= comparison.snapshotId %></h3>
  <table>
    <tr>
      <th>File Name</th>
      <th>FS Size</th>
      <th>API Size</th>
      <th>Differences</th>
    </tr>
    <% comparison.contentDifferences.forEach(diff => { %>
    <tr>
      <td><%= diff.fileName %></td>
      <td><%= diff.fsSize %> bytes</td>
      <td><%= diff.apiSize %> bytes</td>
      <td>
        <a
          href="diffs/<%= comparison.snapshotId %>/<%= diff.fileName %>.diff.json"
          target="_blank"
          >View Detailed Diff</a
        >
      </td>
    </tr>
    <% }); %>
  </table>
  <% }); %>
</div>
