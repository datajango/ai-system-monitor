# System Monitor Backend - Environment Configuration

# Server settings
PORT=3000
NODE_ENV=development

# System snapshots directory (absolute path)
SNAPSHOTS_DIR=D:/Snapshots

# Analysis output directory (absolute path)
ANALYZER_OUTPUT_DIR=D:/system-monitor/section-analysis

# LLM settings
LLM_SERVER_URL=http://localhost:1234/v1
LLM_DEFAULT_MODEL=gemma-2-9b-it
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=pretty  # pretty or json

# File processing settings
FILE_SIZE_LIMIT=1024mb

# Cross-Origin settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Cache settings
CACHE_ENABLED=true
CACHE_DURATION=3600  # in seconds